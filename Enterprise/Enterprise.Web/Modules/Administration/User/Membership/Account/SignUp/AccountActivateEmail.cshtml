@model Enterprise.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your Enterprise account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on Neurral Enterprise with your e-mail address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>
    <br />
    <br />

    Sincerely,
    <br />
    The Neurral Enterprise Team
</body>
</html>